<?xml version="1.0" encoding="utf-8"?>
    <GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/treatmentName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Treatment1"
                android:textSize="22sp"
                android:layout_gravity="center"
                android:textColor="@color/colorPrimaryDark"/>

            <Button
                android:id="@+id/reportSuccessButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_exposure_plus_1_black_24dp"
                android:background="@drawable/rounded_button_yellow"
                android:text="Success"
                android:layout_gravity="center"
                />

            <Button
                android:id="@+id/reportFailureButton"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:drawableStart="@drawable/ic_exposure_plus_1_black_24dp"
                android:text="Failure"
                android:background="@drawable/rounded_button_yellow"
                />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp">
            <TextView
                android:id="@+id/treatment2Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Treatment2"
                android:layout_gravity="center"
                android:textSize="22sp"
                android:textColor="@color/colorPrimaryDark"/>

            <Button
                android:id="@+id/reportSuccessButton2"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_exposure_plus_1_black_24dp"
                android:background="@drawable/rounded_button_yellow"
                android:text="Success"
                />

            <Button
                android:id="@+id/reportFailureButton2"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/rounded_button_yellow"
                android:drawableStart="@drawable/ic_exposure_plus_1_black_24dp"
                android:text="Failure"
                />
        </LinearLayout>




    </GridLayout>