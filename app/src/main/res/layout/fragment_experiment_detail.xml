<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.epicodus.avb.ui.ExperimentDetailFragment"
    android:background="@color/colorPrimary">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/experimentNameDetailFragment"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:text="Experiment Name"
            android:textColor="@color/common_google_signin_btn_text_light_default"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" />

        <ImageView
            android:id="@+id/experimentImageDetailFragment"
            android:layout_width="0dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/abtesting"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/experimentNameDetailFragment"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="@+id/experimentNameDetailFragment"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/experimentNameDetailFragment" />

        <TextView
            android:id="@+id/treatment1DetailFragment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Treatment1"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/experimentImageDetailFragment"
            app:layout_constraintRight_toLeftOf="@+id/guideline2"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline2"
            app:layout_constraintGuide_begin="192dp"
            android:orientation="vertical"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="192dp" />

        <TextView
            android:id="@+id/treatment2DetailFragment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Treatment2"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/experimentImageDetailFragment"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="@+id/experimentImageDetailFragment"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/guideline2"
            app:layout_constraintHorizontal_bias="1.0" />

        <TextView
            android:id="@+id/tx1successesDetailFragment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Successes"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/treatment1DetailFragment"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="@+id/treatment1DetailFragment"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/treatment1DetailFragment" />

        <TextView
            android:id="@+id/tx2successesDetailFragment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Sucesses"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/treatment2DetailFragment"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="@+id/treatment2DetailFragment"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/treatment2DetailFragment" />

        <TextView
            android:id="@+id/tx1failuresDetailFragment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Failures"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tx2successesDetailFragment"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="@+id/tx2successesDetailFragment"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/tx2successesDetailFragment" />

        <TextView
            android:id="@+id/tx2failuresDetailFragment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Failures"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tx1successesDetailFragment"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="@+id/tx1successesDetailFragment"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/tx1successesDetailFragment" />

    </android.support.constraint.ConstraintLayout>


</FrameLayout>
